{
  "name": "@urban/react-build-system",
  "version": "0.1.0",
  "description": "An opinionated build system for React.",
  "author": "Urban Faubion <urban.faubion@gmail.com> (http://urbanfaubion.com)",
  "license": "MIT",
  "keywords": [
    "ES6",
    "ES7",
    "ES2015",
    "ES2016"
  ],
  "bugs": {
    "url": "https://github.com/urban/react-build-system/issues"
  },
  "homepage": "https://github.com/urban/react-build-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/urban/react-build-system.git"
  },
  "preferGlobal": true,
  "bin": {
    "rbs": "./lib/cli.js"
  },
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "build:watch": "babel src --out-dir lib --watch",
    "build": "rimraf lib && npm run build:lib",
    "check": "npm run test:lint && npm test && npm run test:audit && npm outdated --depth 0",
    "prepublish": "npm run build",
    "test:audit": "nsp check",
    "test:cov": "rimraf coverage && NODE_ENV=test babel-node $(npm bin)/isparta cover ./test/*-test.js",
    "test:lint": "standard",
    "test:typecheck": "flow check ./src",
    "test": "NODE_ENV=test babel-node $(npm bin)/tape test/*-test.js | tap-spec",
    "preversion": "npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@urban/webpack-config": "^1.2.0",
    "@urban/webpack-html-plugin": "^1.0.1",
    "babel-core": "^6.3.15",
    "babel-loader": "^6.2.0",
    "babel-plugin-react-transform": "2.0.0-beta1",
    "babel-plugin-transform-flow-strip-types": "^6.3.15",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "6.3.13",
    "connect-history-api-fallback": "1.1.0",
    "css-loader": "^0.23.0",
    "cssnext": "^1.8.4",
    "eval": "^0.1.1",
    "express": "4.13.3",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.26.2",
    "json-loader": "^0.5.4",
    "look-up": "^0.8.2",
    "minimist": "^1.2.0",
    "postcss-loader": "^0.8.0",
    "ramda": "0.19.1",
    "ramda-fantasy": "0.4.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-transform-catch-errors": "1.0.0",
    "react-transform-hmr": "1.0.1",
    "redbox-react": "1.2.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "1.4.0",
    "webpack-dev-server": "^1.14.0",
    "webpack-hot-middleware": "2.6.0",
    "webpack-merge": "0.3.2"
  },
  "devDependencies": {
    "babel-cli": "6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-plugin-transform-flow-strip-types": "6.3.15",
    "isparta": "^4.0.0",
    "nsp": "^2.1.0",
    "rimraf": "^2.4.4",
    "standard": "^5.4.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "interfaces/*"
    ]
  }
}
